<%= form_for(:user,  :url => {:controller => 'preferences', :action => 'password'}) do |f| %>
	<div class="form-group has-feedback">
		Senha antiga:
		<%= f.password_field :oldPassword, class: 'form-control', autocomplete: 'off' %>
	</div>
	<div class="form-group has-feedback">
		Nova senha:
		<%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
	</div>
	<div class="form-group has-feedback">
		Confirme a senha:
		<%= f.password_field :passwordConfirmation, class: 'form-control', autocomplete: 'off' %>
	</div>
	<div class="row">
		<div class="col-xs-8">
			<!-- Uncomment next section when we implement remember me option -->
			<!-- <div class="checkbox icheck">
				<label>
					<input type="checkbox"> Remember Me
				</label>
			</div> -->
		</div><!-- /.col -->
		<div class="col-xs-4">
			<%= f.submit :Submit, class: 'btn btn-primary btn-block btn-flat' %>
		</div><!-- /.col -->
	</div>
<% end %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>