<section class="content-header">
  <h1>
    Dashboard
    <small>Números</small>
  </h1>
</section>
<br><br>

<div class="row">
    <div class="col-md-3 col-sm-6 col-xs-12">
      <div class="info-box">
        <span class="info-box-icon bg-green"><i class="fa fa-shopping-cart"></i></span>
        <div class="info-box-content">
          <span class="info-box-text">Ingredientes</span>
          <span class="info-box-number numero-maior">25</span>
        </div><!-- /.info-box-content -->
      </div><!-- /.info-box -->
    </div><!-- /.col -->
    <div class="col-md-3 col-sm-6 col-xs-12">
      <div class="info-box">
        <span class="info-box-icon bg-aqua"><i class="fa fa-book"></i></span>
        <div class="info-box-content">
          <span class="info-box-text">Receitas Buscadas</span>
          <span class="info-box-number numero-maior">52</span>
        </div><!-- /.info-box-content -->
      </div><!-- /.info-box -->
    </div><!-- /.col -->
    <div class="col-md-3 col-sm-6 col-xs-12">
      <div class="info-box">
        <span class="info-box-icon bg-red"><i class="fa fa-desktop"></i></span>
        <div class="info-box-content">
          <span class="info-box-text">Acessos</span>
          <span class="info-box-number numero-maior">49</span>
        </div><!-- /.info-box-content -->
      </div><!-- /.info-box -->
    </div><!-- /.col -->
    <div class="col-md-3 col-sm-6 col-xs-12">
      <div class="info-box">
        <span class="info-box-icon bg-yellow"><i class="fa fa-star-o"></i></span>
        <div class="info-box-content">
          <span class="info-box-text">Favoritos</span>
          <span class="info-box-number numero-maior">11</span>
        </div><!-- /.info-box-content -->
      </div><!-- /.info-box -->
    </div><!-- /.col -->
  </div>
  

    <div class ="row margin-top-50">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title title">Últimos Ingredientes Cadastrados</h3>
                </div>
                <div class="box-body">
                    <% if @ingredients.first.nil? %>
                    <div class = 'no-ingredient'>
                      <br>
                      Você ainda não possui nenhum ingrediente na sua lista! :( <br>
                      Vá até a página de ingredientes para adicionar novos. 
                      <br>
                      <br>
                      <a href="/ingredients/index" id="ver-todos"><button type="button" class="btn btn-primary">Ir para página de ingredientes</button></a>
                    </div>
                    <% end %>
                    <% if @ingredients.first %>
                      <table class="table table-striped">
                        <tr>
                            <td class="title"> Ingrediente </td>
                            <td class="title"> </td>
                            <td class="title"> Quantidade</td>
                            <td class="title"> Medida</td>
                            <td class="title"> Editar</td>
                            <td class="title"> Excluir</td>
                        </tr>
                        <% @ingredients.each do |ingredient| %>
                        <tr>
                            <td><class "img"><%= image_tag("#{ingredient.picture}") %> </class></td>
                            <td><%= ingredient.name %></td>
                            <td><%= ingredient.quantity %></td>
                            <td><%= ingredient.unit_of_measure %></td>
                            <td><spam class="glyphicon glyphicon-edit btn btn-primary"></spam></td>
                            <td><spam class="glyphicon glyphicon-trash btn btn-danger"></spam></td>
                        </tr>
                        <% end %>
                        <% end %>
                    </table>
                </div>
                <div class="box-header">
                    <% if @ingredients.first %>
                      <a href="/ingredients/index" id="ver-todos"><button type="button" class="btn btn-primary">Ver todos</button></a>
                    <% end %>
                </div>
            </div>
        </div>
    </div>